<% layout("/layouts/boilerplate") -%>

<body>
    <style>
        #filters{
            display: flex;
            flex-wrap: wrap;
            text-align: center;
            justify-content: center;
            align-items: center;
        }

        .filter{
            margin: 0px 15px 0px 15px;
            text-align: center;
            /* opacity:0.7; */
        }

        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .finalPrice{
            display: none;
        }

        .form-check-input:checked {
            background-color: #ff385c;
            border-color: #ff385c;
        }

        .tax-switch{
            border-style: solid;
            border-radius: 20px;
            border-width: 1px;
            border-color: grey;
            padding: 1rem;
            align-items: center;
            height: 60px;
            margin-left: 3rem;
        }

    </style>

    <br>
    
    <!-- <h3 style="text-align: center !important;" >All Listings</h3> -->

    <div id="filters" style="text-transform: none !important;">

        <a href="/listings?category=Trending" class="filter-link" style="color: rgb(255, 56, 92); text-decoration: none;">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
        </a>

        <a href="/listings?category=Rooms" class="filter-link" style="color: rgb(255, 56, 92); text-decoration: none;">
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
        </a>

        <a href="/listings?category=Royal" class="filter-link" style="color: rgb(255, 56, 92); text-decoration: none;">
            <div class="filter">
                <i class="fa-solid fa-crown"></i>
                <p>Royal</p>
            </div>
        </a>

        <a href="/listings?category=Iconic" class="filter-link" style="color: rgb(255, 56, 92); text-decoration: none;">
            <div class="filter">
                <i class="fa-solid fa-mountain-city"></i>
                <p>Iconic</p>
            </div>
        </a>

        <a href="/listings?category=Moutains" class="filter-link" style="color: rgb(255, 56, 92); text-decoration: none;">
            <div class="filter">
                <i class="fa-solid fa-mountain"></i>
                <p>Mountains</p>
            </div>
        </a>

        <a href="/listings?category=AmazingPools"  class="filter-link" style="color: rgb(255, 56, 92); text-decoration: none; ">
            <div class="filter" style="margin-left: 0px !important; margin-right: 0px; ">
                <i class="fa-solid fa-person-swimming"></i>
                <p>Amazing pools</p>
            </div>
        </a>


        <a href="/listings?category=Camping" class="filter-link" style="color: rgb(255, 56, 92); text-decoration: none;">
            <div class="filter">
                <i class="fa-solid fa-campground"></i>
                <p>Camping</p>
            </div>
        </a>

        <a href="/listings?category=Farms" class="filter-link" style="color: rgb(255, 56, 92); text-decoration: none;">
            <div class="filter">
                <i class="fa-solid fa-cow"></i>
                <p>Farms</p>
            </div>
        </a>

        <a href="/listings?category=Arctic" class="filter-link" style="color: rgb(255, 56, 92); text-decoration: none;">
            <div class="filter">
                <i class="fa-solid fa-snowflake"></i>
                <p>Arctic</p>
            </div>
        </a>

        <a href="/listings?category=Boats" class="filter-link" style="color: rgb(255, 56, 92); text-decoration: none;">
            <div class="filter">
                <i class="fa-solid fa-ship"></i>
                <p>Boats</p>
            </div>
        </a>



        <div class="tax-switch" style="border: none;" >
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault" >
                <label class="form-check-label" for="switchCheckDefault">Price incl of GST</label>
                <!-- Taxes in IND are like 5% on amount upto 7500 and 18% on 7501 , ik it sucks but welcome to IND-->
            </div>
        </div>





    </div>

    <br>

    <% if(allListings.length === 0) { %>
        <div class="alert alert-danger col-8 offset-2 mt-5" role="alert" style="text-align: center;">
            <h4 class="alert-heading"><i class="fa-solid fa-triangle-exclamation"></i> No Listings Found!</h4>
            <p>We couldn't find any matches for "<b><%= search %></b>".</p>
            <p class="mb-0">Try searching for a different location or check your spelling.</p>
            <a href="/listings" class="btn btn-outline-danger mt-3">View All Listings</a>
        </div>
    <% } %>
    
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 listing-card">
        <% for(let listing of allListings) {%>

            <div class="card listing-card">
                <a href="listings/<%= listing._id %>">
                    <!-- <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style = "height: 20rem;"> -->
                    <!-- <img src="<%= listing.image.url || listing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem;"> -->
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">

                    <div class="card-img-overlay">
                        
                    </div>

                    <div class="card-body">
                        <p style="margin-top: 10px;"><a style="text-decoration: none; color: inherit;" href="/listings/<%=listing._id%>"> <%= listing.title %> </a></p>

                        <div class="basePrice">
                            <p>
                                Price : &#8377;
                                <%= listing.price ? Number(listing.price).toLocaleString("en-IN") : "N/A" %>
                                per night
                                <% if(listing.price > 7500){ %>
                                    <i> &#43; 18&#37; GST</i> 
                                <% } 
                                else{ %>
                                    <i>&#43; 5&#37; GST</i> 
                                <% }
                                %>
                            </p>
                        </div>

                        <div class="finalPrice">
                            <p>
                                Final Price : &#8377;
                                <%
                                let finalPrice = listing.price;
                                if(listing.price > 7500){
                                    finalPrice = listing.price * 1.18;
                                }
                                else{
                                    finalPrice = listing.price * 1.05;
                                }
                                %>

                                <%= finalPrice ? Number(finalPrice).toLocaleString("en-IN") : "N/A" %>
                                per night
                                <i>incl of GST</i>
                            </p>    
                        </div>
                       

                         
                        <p class="card-text"><%= listing.description %></p>
                    </div>
                </a>
            </div>
        <% } %>
    </div>





<script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {

        let basePrice = document.querySelectorAll(".basePrice");
        let finalPrice = document.querySelectorAll(".finalPrice");
        

        if(taxSwitch.checked){
            for(let price of basePrice) {
                price.style.display = "none";
            }
            for(let price of finalPrice) {
                price.style.display = "block";
            }
            taxSwitch.setAttribute("background-color", "#ff385c");
        }
        else{
            for(let price of basePrice){
                price.style.display = "block";
            }
            for(let price of finalPrice){
                price.style.display = "none";
            }
        };
    })
</script>


</body>


